                                                                                      //Newton–Raphson Method
#include <stdio.h>
#include <math.h>

// Define the function f(x)
float f(float x) {
    return x*x*x - x - 2;  // Example: f(x) = x³ - x - 2
}

// Define the derivative f'(x)
float df(float x) {
    return 3*x*x - 1;  // Derivative: f'(x) = 3x² - 1
}

int main() {
    float x0 = 1.5, x1;
    int max_iter = 100, iter = 0;
    float tolerance = 0.0001;

    printf("Iter\t x0\t\t f(x0)\t\t f'(x0)\t\t x1\n");

    do {
        float fx = f(x0);
        float dfx = df(x0);

        if (dfx == 0) {
            printf("Derivative is zero. Method fails.\n");
            return -1;
        }

        x1 = x0 - fx / dfx;

        printf("%d\t %.6f\t %.6f\t %.6f\t %.6f\n", iter+1, x0, fx, dfx, x1);

        if (fabs(x1 - x0) < tolerance)
            break;

        x0 = x1;
        iter++;
    } while (iter < max_iter);

    printf("\nApproximate root: %.6f\n", x1);
    return 0;
}
